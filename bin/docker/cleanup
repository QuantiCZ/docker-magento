#!/bin/sh

. bin/docker/variables

# Stop running containers, remove images and volumes
sh bin/docker/stop -v --rmi all

# Remove stopped containers
docker-compose rm

if [ "$1" = "reset" ];
  then
    echo "Your sudo password is needed to cleanup frontend and magento folders."
    cd magento || (echo "folder magento does not exist" && exit)
    sudo find . ! -name ".placeholder" -exec rm -rf {} +
    cd ..
    cd frontend || ( echo "folder frontend does not exist" && exit )
    sudo find . ! -name ".placeholder" -exec rm -rf {} +
    cd ..
fi