#!/bin/sh

. bin/docker/variables

echo "Your sudo password is needed to cleanup frontend folder."
cd frontend || echo "folder frontend does not exist" && exit
sudo find . ! -name ".placeholder" -exec rm -rf {} +
cd ..

# Start containers
bin/docker/start

# Init project
docker-compose exec node sh -c "cd /home/dockeruser && \
if [ -d temp ]; then rm -rf temp; fi && \
mkdir temp && \
cd temp && \
vsf init frontend && \
mv /home/dockeruser/temp/frontend/* /home/dockeruser/frontend && \
rm -rf /home/dockeruser/temp && \
cd /home/dockeruser/frontend && \
yarn install && \
yarn dev"