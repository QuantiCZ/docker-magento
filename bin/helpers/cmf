#!/bin/sh

# Cleanup Magento Folder

echo "Stopping running containers"

bin/docker/stop

rm -rf magento

# These folders have to be pre-created, because they are bind mounted into rootless containers
# If they are not pre-created, then docker will automatically create them and they will be owned by root within containers

mkdir magento

mkdir magento/var

mkdir magento/var/log

mkdir magento/var/report